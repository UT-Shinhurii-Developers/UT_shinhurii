<html>

<head>
  <title>お問い合わせフォーム</title>
  <meta charset="utf-8">
</head>

<body>
  <%= form_tag("/inquiry/confirm") do %>
    <h1>お問い合わせ</h1>

    <% if @inquiry.errors.any? %>
      <strong>入力内容にエラーがあります</strong>
      <ul>
        <% @inquiry.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <table>
      <tr>
        <th>名前（必須）</th>
        <td><input type="text" name="name" value="<%= @inquiry.name %>"></td>
      </tr>
      <tr>
        <th>メールアドレス（必須）</th>
        <td><input type="email" name="email" value="<%= @inquiry.email %>"></td>
      </tr>
      <tr>
        <th>お問い合わせ内容</th>
        <td><textarea name="message" style="width: 241px; height: 100px"><%= @inquiry.message %></textarea></td>
      </tr>
    </table>
    <input type="submit" value="確認">
  <% end %>
</body>

</html>
