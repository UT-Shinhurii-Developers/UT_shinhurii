<html>

  <head>
    <title>成績編集画面</title>
    <meta charset="utf-8">
  </head>

  <body>
    <h1>成績を編集してください</h1>
    <%= form_tag("/score/#{@score.id}/update") do %>
      <table>
      <thead>
        <tr>
          <th>授業名</th>
          <th>点数</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            <input type="hidden" name="class_name" value="<%= @score.class_name %>">
            <%= @score.class_name %>
          </td>
          <td>
            <input name="score" value="<%= @score.score %>">
          </td>
          <td>
            <input type="hidden" name="credit" value="<%= @score.credit %>">
          </td>
          <td>
            <input type="hidden" name="weight" value="<%= @score.weight %>">
          </td>
        </tr>
      </tbody>
      </table>
      <input type="submit" value="保存">
    <% end %>
  </body>

  </html>
